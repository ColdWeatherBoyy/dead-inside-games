{{> header}}
<div id="gamecard">
	<section class="grid">
		<h2>Welcome to Minesweeper, {{username}}</h2>
		<h2 id="lost" class="is-hidden">You Lose!</h2>
		<button id="reset" class="is-hidden">Play Again</button>
		<div class="start-button" id="start-btn">
			<button class="btn btn-primary" type="start">Start Game</button>
		</div>
		<div id="timer" class="is-hidden">Time Left: 120</div>
		<div id="frame"></div>
	</section>
</div>
{{> minesweeperhighscores}}
	<div class="logout-container">
		<a href="/api/userRoutes/logout/{{id}}" id="logout" class="btn-no-style">Logout</a>
	</div>

<script src="/js/game.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/startgame.js"></script>
<script src="/js/highscore.js"></script>



